{
  LOG.info("GET worker-user for {}",workerId);
  File file=new File(workerUserFile(conf,workerId));
  try (InputStream in=new FileInputStream(file);Reader reader=new InputStreamReader(in);BufferedReader br=new BufferedReader(reader)){
    StringBuilder sb=new StringBuilder();
    int r;
    while ((r=br.read()) != -1) {
      char ch=(char)r;
      sb.append(ch);
    }
    String ret=sb.toString().trim();
    return ret;
  }
 catch (  IOException e) {
    LOG.error("Failed to get worker user for {}.",workerId);
    return null;
  }
}
