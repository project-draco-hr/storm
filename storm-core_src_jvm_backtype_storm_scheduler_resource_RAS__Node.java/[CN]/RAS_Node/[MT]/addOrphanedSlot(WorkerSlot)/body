{
  if (this.isAlive) {
    throw new IllegalArgumentException("Orphaned Slots " + "only are allowed on dead nodes.");
  }
  validateSlot(ws);
  if (this.freeSlots.contains(ws)) {
    return;
  }
  for (  Set<WorkerSlot> used : this.topIdToUsedSlots.values()) {
    if (used.contains(ws)) {
      return;
    }
  }
  this.freeSlots.add(ws);
}
