{
  _nodeId=nodeId;
  _isAlive=isAlive;
  if (_isAlive && allPorts != null) {
    for (    int port : allPorts) {
      _freeSlots.add(new WorkerSlot(_nodeId,port));
    }
    _sup=sup;
    _hostname=sup.getHost();
    _availMemory=getTotalMemoryResources();
    _availCPU=getTotalCpuResources();
  }
  _cluster=cluster;
  _topologies=topologies;
}
