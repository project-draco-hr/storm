def run(self):
    global MODE
    MODE = Bolt
    global ANCHOR_TUPLE
    (conf, context) = initComponent()
    self.initialize(conf, context)
    try:
        while True:
            tup = readTuple()
            ANCHOR_TUPLE = tup
            self.process(tup)
            ack(tup)
    except Exception as e:
        log(traceback.format_exc(e))
