{
  return new FieldValidator(){
    @Override public String getCriteriaPredicate(){
      return "must be a list of " + cls.getName() + "s";
    }
    @Override public boolean validateField(    Object field){
      if (field instanceof Iterable) {
        for (        Object e : (Iterable)field) {
          if (!cls.isInstance(e)) {
            return false;
          }
        }
        return true;
      }
      return false;
    }
  }
;
}
