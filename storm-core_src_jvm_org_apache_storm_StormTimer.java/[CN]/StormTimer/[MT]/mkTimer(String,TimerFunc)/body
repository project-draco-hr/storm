{
  if (onKill == null) {
    throw new RuntimeException("onKill func is null!");
  }
  StormTimerTask task=new StormTimerTask();
  if (name == null) {
    task.setName("timer");
  }
 else {
    task.setName(name);
  }
  task.setOnKillFunc(onKill);
  task.setActive(true);
  task.setDaemon(true);
  task.setPriority(Thread.MAX_PRIORITY);
  task.start();
  return task;
}
