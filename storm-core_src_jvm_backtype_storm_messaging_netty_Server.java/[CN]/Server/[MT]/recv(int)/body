{
  if (flags == 1) {
    return message_queue.poll();
  }
 else {
    try {
      TaskMessage request=message_queue.take();
      LOG.debug("request to be processed:" + request);
      return request;
    }
 catch (    InterruptedException e) {
      LOG.info("exception within msg receiving",e);
      return null;
    }
  }
}
