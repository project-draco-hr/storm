def deactivate(*args):
    "Syntax: [storm deactivate topology-name]\n\n    Deactivates the specified topology's spouts.\n    "
    if (not args):
        print_usage(command='deactivate')
        sys.exit(2)
    exec_storm_class('backtype.storm.command.deactivate', args=args, jvmtype='-client', extrajars=[USER_CONF_DIR, STORM_BIN_DIR])
