def parse_config_opts(args):
    curr = args[:]
    curr.reverse()
    config_list = []
    args_list = []
    while (len(curr) > 0):
        token = curr.pop()
        if (token == '-c'):
            config_list.append(curr.pop())
        elif (token == '--config'):
            global CONFFILE
            CONFFILE = curr.pop()
        else:
            args_list.append(token)
    return (config_list, args_list)
