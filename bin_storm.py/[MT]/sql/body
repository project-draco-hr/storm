def sql(sql_file, topology_name):
    'Syntax: [storm sql sql-file topology]\n\n    Compiles the SQL statements into a Trident topology and submits it to Storm.\n    '
    exec_storm_class('org.apache.storm.sql.StormSqlRunner', jvmtype='-client', extrajars=[USER_CONF_DIR, STORM_BIN_DIR], args=[sql_file, topology_name], daemon=False)
