{
  List<HostPort> ret=new ArrayList<HostPort>();
  for (  String s : hosts) {
    HostPort hp;
    String[] spec=s.split(":");
    if (spec.length == 1) {
      hp=new HostPort(spec[0]);
    }
 else     if (spec.length == 2) {
      hp=new HostPort(spec[0],Integer.parseInt(spec[1]));
    }
 else {
      throw new IllegalArgumentException("Invalid host specification: " + s);
    }
  }
  return ret;
}
