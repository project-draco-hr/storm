{
  String path="";
  if (!kinesisConfig.getZkInfo().getZkNode().startsWith("/")) {
    path+="/";
  }
  path+=kinesisConfig.getZkInfo().getZkNode();
  if (!kinesisConfig.getZkInfo().getZkNode().endsWith("/")) {
    path+="/";
  }
  path+=(kinesisConfig.getStreamName() + "/" + shardId);
  return path;
}
